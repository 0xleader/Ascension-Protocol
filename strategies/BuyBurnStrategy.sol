// File: contracts/strategies/DistributeAscendStrategy.sol

pragma solidity 0.6.8;

contract BuyBurnStrategy is IAscensionStrategy {
  //VERSION 1.0.0
  string public name = "BuyBurnStrategy";
  //STATE
  address public ascend;
  IUniswapV2Router02 public uniswapV2Router;

  address public burn = 0x3333333333333333333333333333333333333333;
  //EVENTS
  event ProposalValidated();
  event ProposalExecuted(string name, uint256 ethAmount, uint256 tokenAmount);
  event ReceivedEth(address from, uint256 amount);

  //CONSTRUCTOR
  constructor(address _ascend, address _router) public {
    ascend = _ascend;
    uniswapV2Router = IUniswapV2Router02(_router);
  }

  //RECEIVE ETH
  receive() external payable {
    emit ReceivedEth(msg.sender, msg.value);
  }

  //FUNCTIONS
  function validateProposal(address[] calldata _targets, uint256[] calldata _values)
    external
    override
    returns (bool)
  {
    emit ProposalValidated();
    return true;
  }

  function executeStrategy(address[] calldata _targets, uint256[] calldata _values)
    external
    override
    returns (bool)
  {
    //get amount received from liquidity pull
    uint256 ethAmount = address(this).balance;

    //swap funds from liquidity pull for ASCEND
    address[] memory path = new address[](2);
    path[0] = uniswapV2Router.WETH();
    path[1] = ascend;

    uniswapV2Router.swapExactETHForTokensSupportingFeeOnTransferTokens{ value: ethAmount }(
      0, //slippage is unavoidable
      path,
      address(this),
      block.timestamp
    );

    //burn entire balance
    uint256 burnable = IERC20(ascend).balanceOf(address(this));
    IERC20(ascend).transfer(burn, burnable);

    emit ProposalExecuted(name, ethAmount, burnable);
    return true;
  }
}
